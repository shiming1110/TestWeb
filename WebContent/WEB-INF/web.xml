  <servlet>
    <servlet-name>TestJaxRsService</servlet-name>
    <servlet-class>org.apache.wink.server.internal.servlet.RestServlet</servlet-class>  
	    <init-param>  
	        <param-name>javax.ws.rs.Application</param-name>  
	        <param-value>com.demo.jaxrs.TestJaxRsApplication</param-value>  
	    </init-param> 
	    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>TestJaxRsService</servlet-name>
    <url-pattern>/rest/*</url-pattern>
  </servlet-mapping>

  <servlet>  
    <servlet-name>com.demo.servlet.TestServlet</servlet-name>  
    <servlet-class>com.demo.servlet.TestServlet</servlet-class>
  </servlet> 
  <servlet-mapping>
      <servlet-name>com.demo.servlet.TestServlet</servlet-name>
      <url-pattern>/TestServlet</url-pattern>
  </servlet-mapping>
  
  <servlet>  
    <servlet-name>DBAccessServlet</servlet-name>  
    <servlet-class>com.demo.servlet.DBAccessServlet</servlet-class>  
  </servlet> 
  <servlet-mapping>
      <servlet-name>DBAccessServlet</servlet-name>
      <url-pattern>/DBAccessServlet</url-pattern>
  </servlet-mapping>

  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
  
